#include "main.h"

/**
*largest_number - return the largest number
*@a: first integer
*@b: second integer
*@c: third integer
*Return: largest number
*/

int largest_number(int a, int b, int c)
{
	int largest number;
	if (a > b)
	{
		if (b > c)
			largest number = a;
		else if (a > c)
			largest number = a;
		else
			largest number = c;
	}
	else
	{
		if (b < c)
			largest number = c;
		else
			largest number = b;
	}
	return (largest number);
}
